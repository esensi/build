{
    "scripts": {
        "source": "./resources/scripts/*.js",
        "watch": "./resources/scripts/**/*.js",
        "dest": "./public/js/",
        "lint": [
            "./gulpfile.js",
            "./.jshintrc",
            "./composer.json",
            "./package.json",
            "./resources/scripts/**/*.js",
            "!./resources/scripts/common/_ga.js"
        ]
    },
    "styles": {
        "source": "./resources/styles/*.scss",
        "watch": "./resources/styles/**/*.scss",
        "dest": "./public/css/",
        "compiler": "sass"
    },
    "fonts": {
        "source": [
            "./resources/fonts/**/*",
            "./node_modules/font-awesome/fonts/**/*",
            "./node_modules/bootstrap/dist/fonts/**/*",
            "./node_modules/open-sans/fonts/**/*"
        ],
        "watch": "./resources/fonts/**/*",
        "dest": "./public/fonts/"
    },
    "images": {
        "source": "./resources/images/**/*",
        "watch": "./resources/images/**/*",
        "dest": "./public/img/"
    },
    "deployment": {
        "source": ["./*"],
        "connections": {
            "s3-example": {
                "type": "s3",
                "bucket": "XXXXXXXX",
                "region": "us-standard"
            },
            "rsync-example": {
                "type":     "rsync",
                "username": "username",
                "hostname": "example.com",
                "dest": "/home/username/public"
            }
        }
    },
    "workbench": {
        "watch": ["./public/**/*"],
        "init": ["watch"]
    },
    "autoprefixerOpts": {
        "browsers": [
            "> 1%",
            "Android >= 4",
            "Blackberry >= 7",
            "last 5 Chrome versions",
            "last 4 ChromeAndroid versions",
            "Firefox >= 24",
            "Firefox ESR",
            "last 4 FirefoxAndroid versions",
            "Explorer >= 8",
            "last 4 ExplorerMobile versions",
            "iOS >= 5.1",
            "Opera 12.1",
            "Opera <= 28",
            "last 4 OperaMini versions",
            "last 4 OperaMobile versions",
            "Safari >=  5"
        ]
    },
    "vendor": "./node_modules/",
    "revisions": true
}
